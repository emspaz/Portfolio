    <!-- Script para Máscaras de Input (Requisito: CPF, Telefone, CEP) -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const cpfInput = document.getElementById('cpf');
            const telefoneInput = document.getElementById('telefone');
            const cepInput = document.getElementById('cep');

            // Função genérica para aplicar máscara (mantendo apenas dígitos para a lógica)
            function maskInput(input, mask, event) {
                const isBackspace = event && event.inputType === 'deleteContentBackward';
                let value = input.value.replace(/\D/g, ''); 
                let maskedValue = '';
                let charIndex = 0;

                for (let i = 0; i < mask.length; i++) {
                    const maskChar = mask[i];

                    if (charIndex >= value.length) {
                        break;
                    }

                    if (maskChar === '9') {
                        maskedValue += value[charIndex];
                        charIndex++;
                    } else {
                        maskedValue += maskChar;
                    }
                }
                
                input.value = maskedValue;
            }

            // Máscara de CPF: 999.999.999-99
            cpfInput.addEventListener('input', (e) => {
                maskInput(cpfInput, '999.999.999-99', e);
            });

            // Máscara de Telefone: (99) 99999-9999 (suporta 8 ou 9 dígitos no número principal)
            telefoneInput.addEventListener('input', (e) => {
                let value = telefoneInput.value.replace(/\D/g, '');
                let mask = '';
                
                // Determina o formato da máscara baseado no comprimento
                if (value.length <= 10) { 
                    mask = '(99) 9999-9999';
                } else { 
                    mask = '(99) 99999-9999';
                }
                maskInput(telefoneInput, mask, e);
            });
            
            // Máscara de CEP: 99999-999
            cepInput.addEventListener('input', (e) => {
                maskInput(cepInput, '99999-999', e);
            });
            
            // Simulação de Submissão para console (substituindo o alert nativo do HTML)
             document.getElementById('registration-form').addEventListener('submit', (e) => {
                e.preventDefault();
                
                // Coleta de dados para simulação
                const formData = new FormData(e.target);
                const data = Object.fromEntries(formData.entries());
                
                console.log("Dados do Formulário Enviados:", data);
                
                // Usando alert() para feedback imediato no teste (no mundo real seria uma modal customizada)
                alert("Simulação: Cadastro enviado com sucesso! \nVerifique o console para ver o objeto de dados.");
                e.target.reset();
            });
        });
    </script>
